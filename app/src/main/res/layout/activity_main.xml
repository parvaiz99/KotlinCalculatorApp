<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_300"
    android:padding="10dp"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/edTxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingLeft="4dp"
        android:textSize="50sp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:background="@color/grey_300" />
    <TextView
        android:id="@+id/edTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingLeft="4dp"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:background="@color/grey_300"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >

            <Button
                android:id="@+id/c"
                android:layout_marginRight="5dp"
                android:textSize="28sp"
                android:backgroundTint="@color/light_blue_600"
                android:layout_width="40pt"
                android:onClick="cllear"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="C" />

            <Button
                android:id="@+id/pm"
                android:layout_marginRight="5dp"
                android:textSize="28sp"
                android:layout_weight="1"
                android:onClick="buOp"
                android:backgroundTint="@color/light_blue_600"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="Â±" />

            <Button
                android:id="@+id/modulus"
                android:layout_marginRight="5dp"
                android:textSize="28sp"
                android:layout_weight="1"
                android:onClick="buOp"
                android:backgroundTint="@color/light_blue_600"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="%" />

            <Button
                android:id="@+id/division"
                android:textSize="28sp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue_600"
                android:onClick="buOp"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b7"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:textSize="28sp"
                android:onClick="buNoEvent"
                android:textColor="@color/black"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="7" />

            <Button
                android:id="@+id/b8"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:textSize="28sp"
                android:onClick="buNoEvent"
                android:textColor="@color/black"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="8" />

            <Button
                android:id="@+id/b9"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:textSize="28sp"
                android:onClick="buNoEvent"
                android:textColor="@color/black"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="9" />

            <Button
                android:id="@+id/multiply"
                android:textSize="28sp"
                android:layout_weight="1"
                android:backgroundTint="@color/amber_900"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:onClick="buOp"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b4"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textSize="28sp"
                android:onClick="buNoEvent"
                android:textColor="@color/black"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="4" />

            <Button
                android:id="@+id/b5"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textSize="28sp"
                android:onClick="buNoEvent"
                android:textColor="@color/black"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="5" />

            <Button
                android:id="@+id/b6"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textSize="28sp"
                android:onClick="buNoEvent"
                android:textColor="@color/black"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="6" />

            <Button
                android:id="@+id/subtract"
                android:layout_width="40pt"
                android:layout_weight="1"
                android:layout_height="40pt"
                android:textSize="28sp"
                android:onClick="buOp"
                android:backgroundTint="@color/amber_900"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/b1"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:textSize="28sp"
                android:onClick="buNoEvent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="1" />

            <Button
                android:id="@+id/b2"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:textSize="28sp"
                android:layout_weight="1"
                android:onClick="buNoEvent"
                android:textColor="@color/black"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="2" />

            <Button
                android:id="@+id/b3"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:textSize="28sp"
                android:layout_weight="1"
                android:onClick="buNoEvent"
                android:textColor="@color/black"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:text="3" />

            <Button
                android:id="@+id/add"
                android:textSize="28sp"
                android:layout_weight="1"
                android:backgroundTint="@color/amber_900"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:onClick="buOp"
                android:text="+" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b0"
            android:backgroundTint="@color/white"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_width="80pt"
            android:onClick="buNoEvent"
            android:layout_weight="1"
            android:layout_height="40pt"
            android:layout_marginRight="5dp"
            android:text="0" />

        <Button
            android:id="@+id/bdot"
            android:backgroundTint="@color/white"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_width="43pt"
            android:layout_height="40pt"
            android:onClick="buNoEvent"
            android:layout_marginRight="5dp"
            android:text="." />

        <Button
            android:id="@+id/bequal"
            android:textSize="28sp"
            android:backgroundTint="@color/amber_900"
            android:layout_width="43pt"
            android:layout_height="40pt"
            android:onClick="buequal"
            android:text="=" />
    </LinearLayout>
</LinearLayout>